=form_for(@user, :html => {:class => "form-group"}) do |f|
  .form-group
    =f.label :name
    =f.text_field :name, class:"form-control", placeholder:"Username"
  .form-group
    =f.label :email
    =f.text_field :email, class:"form-control", placeholder:"Email"
  .form-group
    =f.label :password
    =f.password_field :password, type:"password", class:"form-control", placeholder:"Password"
  .form-group
    =f.label :password_confirmation, "Confirmation"
    =f.password_field :password_confirmation, type:"password", class:"form-control", placeholder:"Confirmation"
  
  =f.submit "Submit", class: "btn btn-primary", type:"submit"