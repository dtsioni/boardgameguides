%h1 Index Users

%table{class:"table table-striped table-bordered table-hover table-condensed"}
  %thead
    %tr
      %td
        ID
      %td
        Username
      %td
        Email
      %td
        Role
      %td
        Delete
      %td
        Edit

  %tbody
    -@users.each do |user|
      %div
        %tr
          %td
            =link_to "#{user.id}", user
          %td
            =user.name
          %td
            =user.email
          %td
            =user.role.humanize
          %td
            =link_to "Delete", user, method: :delete, data:{confirm:"Are you sure?"}
          %td
            =link_to "Edit", edit_user_path(user)